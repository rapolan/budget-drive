# =====================================================
# SERVER CONFIGURATION
# =====================================================
NODE_ENV=development
PORT=3000
API_VERSION=v1

# =====================================================
# DATABASE - PostgreSQL
# =====================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=budget_driving_school
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# =====================================================
# JWT AUTHENTICATION
# =====================================================
JWT_SECRET=change_this_to_a_very_long_random_secure_string_in_production
JWT_EXPIRE=7d

# =====================================================
# CORS CONFIGURATION
# =====================================================
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# =====================================================
# RATE LIMITING
# =====================================================
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# =====================================================
# EMAIL CONFIGURATION (Optional - for notifications)
# =====================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_specific_password
EMAIL_FROM=noreply@budgetdrivingschool.com

# =====================================================
# LOGGING
# =====================================================
LOG_LEVEL=info
LOG_FILE_PATH=logs/app.log

# =====================================================
# GOOGLE CALENDAR INTEGRATION (Phase 4B - Coming Soon)
# =====================================================
# GOOGLE_CLIENT_ID=your_google_oauth_client_id
# GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret
# GOOGLE_REDIRECT_URI=http://localhost:3000/api/v1/calendar/callback

# =====================================================
# TWILIO SMS (Optional - for SMS notifications)
# =====================================================
