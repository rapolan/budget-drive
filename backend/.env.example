# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database - PostgreSQL (via Knex)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=driving_school
DB_USER=postgres
DB_PASSWORD=your_postgres_password_here

# Database - MongoDB
MONGODB_URI=mongodb://localhost:27017/driving_school

# JWT Authentication
JWT_SECRET=change_this_to_a_secure_random_string_in_production
JWT_EXPIRE=7d

# BSV Blockchain - Teranode Configuration
BSV_NETWORK=testnet

# Teranode RPC Configuration
TERANODE_RPC_URL=https://teranode-rpc.your-provider.com
TERANODE_API_KEY=your_teranode_api_key_here

# BSV Wallet Configuration
BSV_PRIVATE_KEY=your_bsv_private_key_here
BSV_PUBLIC_KEY=your_bsv_public_address_here

# MNEE Stablecoin
MNEE_CONTRACT_ADDRESS=your_mnee_contract_address_here
MNEE_DECIMALS=8

# CORS
ALLOWED_ORIGINS=http://localhost:3001,http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password
EMAIL_FROM=noreply@drivingschool.com

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=logs/app.log

# Certificate Generation
CERTIFICATE_ISSUER_NAME=Your Driving School Name
CERTIFICATE_ISSUER_ADDRESS=Your School Address Here
CERTIFICATE_TEMPLATE_PATH=templates/certificate.html

# Teranode-specific features
TERANODE_MAX_BLOCK_SIZE=4000000000
TERANODE_BATCH_TRANSACTIONS=true
TERANODE_PARALLEL_VALIDATION=true
